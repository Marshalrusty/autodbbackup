{
	"name": "david63/autodbbackup",
	"type": "phpbb-extension",
	"description": "An extension for phpBB that will automatically backup your database using the phpBB Cron.",
	"version": "3.1.0-RC1",
	"time": "2020-10-30",
	"keywords": [
		"phpbb",
		"extension",
		"auto",
		"database",
		"backup"
	],
	"license": "GPL-2.0-only",
	"authors": [{
            "name": "Lukasz Kaczynski",
            "role": "Developer"
        },
		{	"name": "David Wood",
			"role": "phpBB 3.2 Updater"
		}],
	"require": {
        "php": ">=7.1.3",
        "composer/installers": "~1.0"
    },
	"extra": {
		"display-name": "Auto database backup",
		"soft-require": {
			"phpbb/phpbb": ">=3.3.0,<4.0.0@dev"
		},
		"version-check": {
        	"host": "version.phpbbdev.space",
        	"directory": "/versions",
        	"filename": "auto_db_backup_version_file.json",
			"ssl": false
    	}
	}
}
